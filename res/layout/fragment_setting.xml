<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.dream.view.TitleBarView
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.dream.view.TitleBarView>        
    
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_bar"  >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f2f2f2"
            android:orientation="vertical" >

            <!-- RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/s_search_bg" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="我"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </RelativeLayout -->

            <RelativeLayout
                android:id="@+id/mime_layout_05"
                android:layout_width="fill_parent"
                android:layout_height="110dip"
                android:layout_marginTop="15dip"
                android:background="@drawable/usermainpage_bg_center"
                android:clickable="true" >

                <ImageView
                    android:id="@+id/mime_img_05"
                    android:layout_width="80dip"
                    android:layout_height="80dip"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:background="@drawable/portrait"
                    android:scaleType="fitXY" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/row_img_05"
                    android:layout_toRightOf="@id/mime_img_05" >

                    <TextView
                        android:id="@+id/text_01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:text="梦想飞起来的猪"
                        android:textColor="#202020"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_01"
                        android:layout_marginTop="10dip"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/text_02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dip"
                            android:text="积跬步，致千里"
                            android:textColor="#808080"
                            android:textSize="16sp" />
                    </LinearLayout>
                </RelativeLayout>

                <ImageView
                    android:id="@+id/row_img_05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    android:scaleType="matrix"
                    android:src="@drawable/mm_submenu" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:background="@drawable/usermainpage_bg_center"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/mime_layout_01"
                    android:layout_width="fill_parent"
                    android:layout_height="42dip"
                    android:clickable="true" >

                    <ImageView
                        android:id="@+id/mime_img_01"
                        android:layout_width="36.0dip"
                        android:layout_height="36.0dip"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dip"
                        android:background="@drawable/ic_mine_gallery"
                        android:scaleType="fitXY" />

                    <TextView
                        android:id="@+id/card_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dip"
                        android:layout_toRightOf="@id/mime_img_01"
                        android:text="我的相册"
                        android:textColor="#202020"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/row_img_01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"
                        android:scaleType="matrix"
                        android:src="@drawable/mm_submenu" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="60dip"
                    android:background="@drawable/line" />

                <RelativeLayout
                    android:id="@+id/scan_qrcode"
                    android:layout_width="fill_parent"
                    android:layout_height="42dip"
                    android:clickable="true" >

                    <ImageView
                        android:id="@+id/mime_img_02"
                        android:layout_width="36.0dip"
                        android:layout_height="36.0dip"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dip"
                        android:background="@drawable/ic_mine_feed"
                        android:scaleType="fitXY" />

                    <TextView
                        android:id="@+id/card_text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dip"
                        android:layout_toRightOf="@id/mime_img_02"
                        android:text="二维码扫描"
                        android:textColor="#202020"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/row_img_02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"
                        android:scaleType="matrix"
                        android:src="@drawable/mm_submenu" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/server_host"
                android:layout_width="fill_parent"
                android:layout_height="42dip"
                android:layout_marginTop="15dip"
                android:background="@drawable/usermainpage_bg_center"
                android:clickable="true" >

                <ImageView
                    android:id="@+id/mime_img_06"
                    android:layout_width="36.0dip"
                    android:layout_height="36.0dip"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:background="@drawable/chat_addition_activity_nor"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/lable_server_host"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:layout_toRightOf="@id/mime_img_06"
                    android:text="服务器地址"
                    android:textColor="#202020"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/row_img_08"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    android:scaleType="matrix"
                    android:src="@drawable/mm_submenu" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mime_layout_07"
                android:layout_width="fill_parent"
                android:layout_height="42dip"
                android:layout_marginTop="15dip"
                android:background="@drawable/usermainpage_bg_center"
                android:clickable="true" >

                <ImageView
                    android:id="@+id/mime_img_07"
                    android:layout_width="36.0dip"
                    android:layout_height="36.0dip"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:background="@drawable/ic_mine_setting"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/card_text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:layout_toRightOf="@id/mime_img_07"
                    android:text="设置"
                    android:textColor="#202020"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/row_img_06"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    android:scaleType="matrix"
                    android:src="@drawable/mm_submenu" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>